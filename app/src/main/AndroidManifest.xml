<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tarvifai_DashBoard_act_02"
        tools:targetApi="31">
        <activity
            android:name=".Activity.review_activity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Activity.preferences"
            android:screenOrientation="portrait"
            android:exported="false" /> <!-- Splash Screen -->
        <activity
            android:name=".Activity.splash.splash_screen"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Authentication Activities -->
        <activity
            android:name=".Activity.Auth.sign_in"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Activity.Auth.sign_up"
            android:screenOrientation="portrait"
            android:exported="true" /> <!-- Main Dashboard -->
        <activity
            android:name=".Activity.DashBoard"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".Fragments.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" /> <!-- Other Activities & Fragments -->
        <activity
            android:name=".Activity.view_hotel"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Activity.payment_descriptiion"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Fragments.calender"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Fragments.Profile"
            android:screenOrientation="portrait"
            android:exported="false" />
    </application>

</manifest>